<div class="tasks-container">
  <div class="tasks-list-wrapper">
    <div class="tasks-header-container">
      <article class="tasks-header">

        <h3>Tasks list</h3>

          <label id="add-new-task" class="span-btn">
            <span class="circle-btn" {{action "toggle_add_task"}}>+</span>
          </label>

      </article>
    </div>
    <div class="tasks-list-container">

      {{#each model as |task index index-plus|}}
        <article id="task_{{task.id}}"  class="task-elem" data-content="{{task.content}}" data-uuid="task_{{task.uuid}}" >
          <table class="task-listing">
            <tr>
              <td class="left-part">
                <div class="chkbx-container">
                  <input type="checkbox" class="task-status-chkbx toggle_{{task.status}}" checked="{{task.checked_flag}}"  >
                  <label class="chkbxInput" {{action "toggleStatus" task.uuid task.status }}></label>
                </div>
              </td>
              <td class="center-part">
                <label class="task-text toggle_{{task.status}}" >{{index-plus index}}. <span class="task-title-span" {{action "toggle_edit_task" task.uuid task.title task.content}}>{{task.title}}</span> - <span class="task-content-span" {{action "toggle_edit_task" task.uuid task.title task.content}}>{{task.content}}</span></label>
              </td>
              <td class="right-part">
                <label data-uuid="{{task.uuid}}" data-status="{{task.status}}" class="task-rem" {{action "removeOldTask" task.uuid }} >X</label>
              </td>
            </tr>
          </table>
        </article>
      {{/each}}
      {{outlet}}
    </div>
    <div class="summery">
      {{summery-data}}
    </div>
    {{new-record}}
    {{edit-record}}
  </div>
</div>
