<div class="container">
  <div class="tasks-list-wrapper">
    <div class="tasks-header">
      <h3>Tasks list</h3>
      <button id="add-btn">+</button>
    </div>

    <div class="tasks-list-container">
      {{#each model as |task|}}
        <article id="task_{{task.id}}" class="listing-task" data-content="{{task.content}}" data-uuid="task_{{task.uuid}}" >
          <label class="toggle_{{task.status}}">{{task.title}}</label>
        </article>
      {{/each}}
    </div>
  </div>
</div>
