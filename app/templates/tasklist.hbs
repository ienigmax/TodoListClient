<div class="tasks-container">
  <div class="tasks-list-wrapper">


    <div class="tasks-list-container">
      <article class="tasks-header">

      <h3>Tasks list</h3>

      <button id="add-btn">+</button>
    </article>
      {{#each model as |task|}}
        <article id="task_{{task.id}}" class="task-elem" data-content="{{task.content}}" data-uuid="task_{{task.uuid}}" >
          <input type="checkbox" class="task-status-chkbx toggle_{{task.status}}" checked="{{task.checked_flag}}" >
          <label class="toggle_{{task.status}}">{{task.id}}. {{task.title}}</label>
          <span class="task-rem">X</span>
        </article>
      {{/each}}
    </div>
  </div>
</div>
