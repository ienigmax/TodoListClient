<div class="tasks-container">
  <div class="tasks-list-wrapper">
    <div class="tasks-header">
      <div class="header-text">
        <h3>Tasks list</h3>
      </div>
      <button id="add-btn">+</button>
    </div>

    <div class="tasks-list-container">
      {{#each model as |task|}}
        <article id="task_{{task.id}}" class="listing-task" data-content="{{task.content}}" data-uuid="task_{{task.uuid}}" >
          <input type="checkbox" class="toggle_{{task.status}}" checked="{{task.checked_flag}}" >
          <label class="toggle_{{task.status}}">{{task.id}}. {{task.title}}</label>
          <span class="remove-btn">X</span>
        </article>
      {{/each}}
    </div>
  </div>
</div>
